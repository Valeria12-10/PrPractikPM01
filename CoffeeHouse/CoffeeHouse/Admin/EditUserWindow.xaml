<Window x:Class="CoffeeHouse.Admin.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditUserWindow" Height="385" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="8">
            <TextBlock Text="ФИО:" Margin="0,0,0,5"/>
            <TextBox x:Name="FullNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Роль:" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleComboBox" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Width="114" Margin="0,0,10,0" Click="Save_Click"/>
                <Button Content="Отмена" Width="104" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>